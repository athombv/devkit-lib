{
  "type": "enum",
  "title": {
    "en": "Heater Operation Mode",
    "nl": "Verwarmingsmodus"
  },
  "values": [
    {
      "id": "eco",
      "title": {
        "en": "Eco",
        "nl": "Eco"
      }
    },
    {
      "id": "electric",
      "title": {
        "en": "Electric",
        "nl": "Elektrisch"
      }
    },
    {
      "id": "performance",
      "title": {
        "en": "Performance",
        "nl": "Prestatie"
      }
    },
    {
      "id": "high_demand",
      "title": {
        "en": "High Demand",
        "nl": "Hoog verbruik"
      }
    },
    {
      "id": "heat_pump",
      "title": {
        "en": "Heat Pump",
        "nl": "Warmtepomp"
      }
    },
    {
      "id": "gas",
      "title": {
        "en": "Gas",
        "nl": "Gas"
      }
    },
    {
      "id": "off",
      "title": {
        "en": "Off",
        "nl": "Uit"
      }
    }
  ],
  "getable": true,
