        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "heater_operation_mode_is",
        "title": {
          "en": "The heater operation mode !{{is|is not}}",
          "nl": "De verwarmingsmodus !{{is|is niet}}"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_heater_operation_mode",
        "title": {
          "en": "Set the heater operation mode to",
          "nl": "Stel de verwarmingsmodus in op"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
