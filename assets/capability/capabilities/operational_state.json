{
  "type": "enum",
  "title": {
    "en": "Operational state",
    "nl": "Operationele staat"
  },
  "desc": {
    "en": "The operational state of the appliance.",
    "nl": "De operationele staat van het apparaat."
  },
  "values": [
    {
      "id": "stopped",
      "title": {
        "en": "Stopped",
        "nl": "Gestopt"
      }
    },
    {
      "id": "running",
      "title": {
        "en": "Running",
        "nl": "Aan"
      }
    },
    {
      "id": "paused",
      "title": {
        "en": "Paused",
        "nl": "Gepauzeerd"
      }
    },
    {
      "id": "error",
      "title": {
        "en": "Error",
        "nl": "Fout"
      }
    }
  ],
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [
      {
        "id": "operational_state_changed",
        "highlight": true,
        "title": {
          "en": "The operational state changed to",
          "nl": "De operationele staat is veranderd naar"
        },
        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "operational_state_is",
        "title": {
          "en": "The operational state !{{is|is not}}",
          "nl": "De operationele staat !{{is|is niet}}"
        },
        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
  },
  "minCompatibility": "12.1.0"
}