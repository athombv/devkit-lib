{
  "type": "enum",
  "title": {
    "en": "Media Input",
    "nl": "Media-input"
  },
  "desc": {
    "en": "The input channel for a media player",
    "nl": "Het invoerkanaal voor een mediaspeler"
  },
  "values": [
    {
      "id": "hdmi_1",
      "title": {
        "en": "HDMI 1",
        "nl": "HDMI 1"
      }
    },
    {
      "id": "hdmi_2",
      "title": {
        "en": "HDMI 2",
        "nl": "HDMI 2"
      }
    },
    {
      "id": "hdmi_3",
      "title": {
        "en": "HDMI 3",
        "nl": "HDMI 3"
      }
    },
    {
      "id": "usb_1",
      "title": {
        "en": "USB 1",
        "nl": "USB 1"
      }
    },
    {
      "id": "usb_2",
      "title": {
        "en": "USB 2",
        "nl": "USB 2"
      }
    },
    {
      "id": "component",
      "title": {
        "en": "Component",
        "nl": "Component"
      }
    }
  ],
  "getable": true,
  "setable": true,
  "uiComponent": "picker",
  "$flow": {
    "triggers": [
      {
        "id": "media_input_changed",
        "highlight": true,
        "title": {
          "en": "The media input changed to",
          "nl": "De media-input is veranderd naar"
        },
        "args": [
          {
            "name": "input",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "media_input_is",
        "title": {
          "en": "The media input !{{is|is not}}",
          "nl": "De media-input !{{is|is niet}}"
        },
        "args": [
          {
            "name": "input",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "media_input_set",
        "title": {
          "en": "Set the media input",
          "nl": "Stel de media-input in"
        },
        "args": [
          {
            "name": "input",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
  },
  "minCompatibility": "12.1.0"
}