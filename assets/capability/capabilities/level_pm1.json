{
  "type": "enum",
  "title": {
    "en": "PM1 level",
    "nl": "PM1-niveau"
  },
  "desc": {
    "en": "The amount of PM1 particles in the air represented by a level.",
    "nl": "De hoeveelheid PM1-deeltjes in de lucht weergegeven als niveau."
  },
  "values": [
    {
      "id": "low",
      "title": {
        "en": "Low",
        "nl": "Laag"
      }
    },
    {
      "id": "medium",
      "title": {
        "en": "Medium",
        "nl": "Middel"
      }
    },
    {
      "id": "high",
      "title": {
        "en": "High",
        "nl": "Hoog"
      }
    },
    {
      "id": "critical",
      "title": {
        "en": "Critical",
        "nl": "Kritiek"
      }
    }
  ],
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [
      {
        "id": "level_pm1_changed",
        "highlight": true,
        "title": {
          "en": "The PM1 level changed to",
          "nl": "Het PM1-niveau is veranderd naar"
        },
        "args": [
          {
            "name": "level",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "level_pm1_is",
        "title": {
          "en": "The PM1 level !{{is|is not}}",
          "nl": "Het PM1-niveau is !{{is|is niet}}"
        },
        "args": [
          {
            "name": "level",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
  },
  "minCompatibility": "12.1.0"
}