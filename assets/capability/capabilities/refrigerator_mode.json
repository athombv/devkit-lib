{
  "type": "enum",
  "title": {
    "en": "Refrigerator Mode",
    "nl": "Koelkastmodus"
  },
  "desc": {
    "en": "The mode of the refrigerator.",
    "nl": "De modus van de koelkast."
  },
  "values": [
    {
      "id": "normal",
      "title": {
        "en": "Normal",
        "nl": "Normaal"
      }
    },
    {
      "id": "rapid_cooling",
      "title": {
        "en": "Rapid Cooling",
        "nl": "Snel koelen"
      }
    },
    {
      "id": "rapid_freezing",
      "title": {
        "en": "Rapid Freezing",
        "nl": "Snel vriezen"
      }
    }
  ],
  "getable": true,
  "setable": true,
  "uiComponent": "picker",
  "$flow": {
    "triggers": [
      {
        "id": "refrigerator_mode_changed",
        "highlight": true,
        "title": {
          "en": "The refrigerator mode changed to",
          "nl": "De koelkastmodus is veranderd naar"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "refrigerator_mode_is",
        "title": {
          "en": "The refrigerator mode !{{is|is not}}",
          "nl": "De koelkastmodus !{{is|is niet}}"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_refrigerator_mode",
        "title": {
          "en": "Set the refrigerator mode to",
          "nl": "Stel de koelkastmodus in op"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
  },
  "minCompatibility": "12.1.0"
}